<%- include("navbar") %>

<div class="container py-5">
  

  <!-- Search -->
  <div class="row mb-4 g-2">
    <div class="col-12 col-md-6 offset-md-3 d-flex">
      <input type="text" id="searchInput" class="form-control me-2" placeholder="Search schemes...">
      <button class="btn apply-btn"><i class="fa fa-search"></i></button>
    </div>
  </div>

  <!-- Schemes List -->
  <div class="row g-4" id="schemesList">
    <% for (var i = 0; i < info.length; i++) { %>
      <div class="col-md-4 scheme-item" data-aos="fade-up" data-aos-delay="<%= i*100 %>">
        <div class="card scheme-card h-100 p-3 text-center">
          <!-- Icon / Image -->
          <% if(info[i].icon){ %>
            <i class="<%= info[i].icon %> scheme-icon"></i>
          <% } else { %>
            <img src="/uploads/<%= info[i].image %>" class="img-fluid" style="height:200px;" alt="scheme icon">
          <% } %>

          <!-- Heading -->
          <h5 class="mt-3"><%= info[i].heading %></h5>

          <!-- Description -->
          <p class="text-muted"><%= info[i].description.substring(0,100) %>...</p>

          <!-- Buttons -->
          <div class="d-flex justify-content-center gap-2 mt-3">
            <a href="<%= info[i].button_link%>" target="_blank"><button class="btn apply-btn btn-sm" 
              >Apply Now</button></a>
            
            <a href="/admin/edit_Government_Schemes/<%= info[i].id %>" class="btn btn-warning btn-sm">Update</a>
            <a href="/admin/delete_Government_Schemes/<%= info[i].id %>" class="btn btn-warning btn-sm">delete</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>


<%- include("footer") %>
