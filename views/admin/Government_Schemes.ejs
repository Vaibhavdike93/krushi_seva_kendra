<%- include("navbar") %>

<div class="container py-5 position-relative">

  <!-- Language Select Top-Right -->
  <form method="GET" action="/admin/Government_Scheme_list" style="position:absolute; top:20px; right:60px;">
    <select name="lang" id="langSelect" class="form-select" style="width:150px;">
      <option value="en" <%= language === "en" ? "selected" : "" %>>English</option>
      <option value="mr" <%= language === "mr" ? "selected" : "" %>>Marathi</option>
      <option value="hi" <%= language === "hi" ? "selected" : "" %>>Hindi</option>
    </select>
  </form>


  <!-- Schemes List -->
  <div class="row g-4" id="schemesList">
    <% info.forEach((item, i) => { %>
      <div class="col-md-4 scheme-item" data-aos="fade-up" data-aos-delay="<%= i*100 %>">
        <div class="card scheme-card h-100 p-3 text-center">
          <% if(item.icon){ %>
            <i class="<%= item.icon %> scheme-icon"></i>
          <% } else { %>
            <img src="/uploads/<%= item.image %>" class="img-fluid" style="height:200px;" alt="scheme icon">
          <% } %>

          <h5 class="mt-3"><%= item.heading %></h5>
          <p class="text-muted"><%= item.description.substring(0,100) %>...</p>

          <div class="d-flex justify-content-center gap-2 mt-3">
            <a href="<%= item.button_link %>" target="_blank">
              <button class="btn apply-btn btn-sm">Apply Now</button>
            </a>
            <a href="/admin/edit_Government_Schemes/<%= item.id %>" class="btn btn-warning btn-sm">Update</a>
            <a href="/admin/delete_Government_Schemes/<%= item.id %>" class="btn btn-warning btn-sm">Delete</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
  document.getElementById("langSelect").addEventListener("change", function() {
    this.form.submit(); // submit with ?lang=value
  });
</script>

<%- include("footer") %>
