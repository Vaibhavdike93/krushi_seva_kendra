<%- include("navbar") %>

<br>

<!-- Brand List Table -->
<div class="card shadow-sm border-0">
    <div class="card-header text-white d-flex justify-content-between align-items-center" style="
        background: linear-gradient(135deg, #007BFF, #00CFC8);
        font-weight: bold;
        font-size: 1.2rem;
        letter-spacing: 1px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.2);
    ">
        <h4 class="mb-0">Product Brand List</h4>
        <a href="/admin/Add_product_Brand" class="btn btn-light btn-sm shadow-sm">
            <i class="fas fa-plus"></i> Add Brand
        </a>
    </div>
    <div class="card-body table-responsive">
        <table id="brandTable" class="table table-bordered table-hover align-middle text-center">
            <thead style="background: linear-gradient(135deg, #343a40, #495057); color: white;">
                <tr>
                    <th>#</th>
                    <th>Brand Names</th>
                    <th>Brand Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (brands.length > 0) { %>
                    <% brands.forEach(function(brand, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td class="fw-semibold text-start">
                                <div><b>EN:</b> <%= brand.brand_name_en %></div>
                                <div><b>HI:</b> <%= brand.brand_name_hi %></div>
                                <div><b>MR:</b> <%= brand.brand_name_mr %></div>
                            </td>
                            <td>
                                <img src="/uploads/<%= brand.brand_image %>" 
                                     alt="<%= brand.brand_name_en %>" 
                                     class="img-thumbnail border-0 shadow-sm" 
                                     style="width:80px; height:auto; border-radius:8px;">
                            </td>
                            <td>
                                <a href="/admin/delete_brand/<%= brand.brand_id %>" 
                                   class="btn btn-danger btn-sm shadow-sm"
                                   onclick="return confirm('Are you sure you want to delete this brand?')">
                                   <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-muted">No brands found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include("footer") %>


<script>
$(document).ready(function () {
    $('#brandTable').DataTable({
        paging: true,
        lengthMenu: [5, 10, 25, 50],
        pageLength: 5,
        ordering: true,
        order: [[0, 'asc']],
        language: {
            search: "üîç Search:",
            lengthMenu: "Show _MENU_ entries",
            info: "Showing _START_ to _END_ of _TOTAL_ brands",
            paginate: {
                first: "First",
                last: "Last",
                next: "Next",
                previous: "Prev"
            }
        }
    });
});
</script>
