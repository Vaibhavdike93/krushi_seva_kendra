<%- include("navbar") %>

<div class="container py-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h4><i class="fas fa-plus-circle"></i> Add Product</h4>
      
      <!-- Language Selector -->
      <form method="get" action="/admin/add_product" class="d-flex">
        <select name="lang" class="form-select" onchange="this.form.submit()">
          <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
          <option value="hi" <%= lang === 'hi' ? 'selected' : '' %>>हिंदी</option>
          <option value="mr" <%= lang === 'mr' ? 'selected' : '' %>>मराठी</option>
        </select>
      </form>
    </div>

    <div class="card-body">
      <form action="/admin/add_product" method="POST" enctype="multipart/form-data">
 <input type="hidden" name="language" value="<%= lang %>">
        <div class="row g-3">
          <!-- Product Name -->
          <div class="col-md-6">
            <label class="form-label">Product Name</label>
            <input type="text" name="product_name" class="form-control" required>
          </div>

         <!-- Category -->
<div class="col-md-6">
  <label class="form-label">Category</label>
  <select name="category_id" class="form-select" required>
    <option value="" disabled selected>-- Select Category --</option> <!-- ✅ default -->
    <% categories.forEach(cat => { %>
      <option value="<%= cat.category_id %>"><%= cat.category_name %></option>
    <% }) %>
  </select>
</div>
          <!-- Brand -->
          <div class="col-md-6">
  <label class="form-label">Brand</label>
  <select name="brand_id" class="form-select" required>
    <option value="" disabled selected>-- Select Brand --</option> <!-- ✅ default -->
    <% brands.forEach(brand => { %>
      <option value="<%= brand.brand_id %>"><%= brand.brand_name %></option>
    <% }) %>
  </select>
</div>

          <!-- Discount -->
          <div class="col-md-6">
            <label class="form-label">Discount (%)</label>
            <input type="number" name="discount" class="form-control" min="0" max="100">
          </div>

          <!-- Stock Quantity -->
          <div class="col-md-6">
            <label class="form-label">Stock Quantity</label>
            <input type="number" name="stock_qty" class="form-control" required>
          </div>

          <!-- Dosage -->
          <div class="col-md-6">
            <label class="form-label">Dosage</label>
            <input type="text" name="dosage" class="form-control">
          </div>

          <!-- Season -->
          <div class="col-md-6">
            <label class="form-label">Season</label>
            <select name="season" id="season" class="form-select" required>
              <% Object.keys(translations[lang].season).forEach(key => { %>
                <option value="<%= key %>"><%= translations[lang].season[key] %></option>
              <% }) %>
            </select>
          </div>

  <label class="form-label">Suitable Crops</label><br>
<% crops.forEach(crop => { %>
  <div class="form-check form-check-inline">
    <input 
      type="checkbox" 
      class="form-check-input" 
      name="crops[]"  
      value="<%= crop.crop_id %>" 
      id="crop_<%= crop.crop_id %>">
    <label class="form-check-label" for="crop_<%= crop.crop_id %>">
      <%= crop.crop_name %>
    </label>
  </div>
<% }) %>



          <!-- Description -->
          <div class="col-md-6">
            <label class="form-label">Description</label>
            <textarea name="description" rows="3" class="form-control"></textarea>
          </div>

          <!-- Features -->
          <div class="col-md-6">
            <label class="form-label">Features & Benefits</label>
            <textarea name="features" rows="3" class="form-control"></textarea>
          </div>

          <!-- Image Upload -->
          <div class="col-md-6">
  <label class="form-label">Product Image</label>
  <input type="file" name="productImage" id="productImage" class="form-control" accept="image/*">
  <div class="mt-2">
    <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail" style="max-width: 200px; display: none;">
  </div>
</div>

        <!-- Weight & Price Variants -->
        <div class="mt-4">
          <label class="form-label">Weight & Price Variants</label>
          <div id="variant-container">
            <div class="row g-2 mb-2 align-items-center">
              <div class="col-md-5">
                <input type="text" name="weight[]" class="form-control" placeholder="Weight (e.g. 1kg)">
              </div>
              <div class="col-md-5">
                <input type="number" name="price[]" class="form-control" placeholder="Price">
              </div>
              <div class="col-md-2">
                <button type="button" class="btn btn-success w-100 add-variant"><i class="fas fa-plus"></i></button>
              </div>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <div class="text-end mt-3">
          <button type="submit" class="btn btn-primary px-4">Save Product</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  let variantIndex = 1;
  document.addEventListener("click", function(e) {
    const target = e.target.closest("button");
    if (!target) return;

    if (target.classList.contains("add-variant")) {
      const container = document.getElementById("variant-container");
      const row = document.createElement("div");
      row.className = "row g-2 mb-2 align-items-center";
   row.innerHTML = `
  <div class="col-md-5">
    <input type="text" name="weight[]" class="form-control" placeholder="Weight">
  </div>
  <div class="col-md-5">
    <input type="number" name="price[]" class="form-control" placeholder="Price">
  </div>
  <div class="col-md-2">
    <button type="button" class="btn btn-danger w-100 remove-variant"><i class="fas fa-minus"></i></button>
  </div>`;

      container.appendChild(row);
      variantIndex++;
    }

    if (target.classList.contains("remove-variant")) {
      target.closest(".row").remove();
    }
  });

// image preview 
  document.getElementById("productImage").addEventListener("change", function(event) {
    const preview = document.getElementById("imagePreview");
    const file = event.target.files[0];

    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = "block"; // show preview
      };
      reader.readAsDataURL(file);
    } else {
      preview.style.display = "none";
      preview.src = "#";
    }
  });
</script>
<%- include("footer") %>
