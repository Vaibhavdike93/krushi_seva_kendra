<%- include("navbar") %>

<div class="container mt-4">
  <h3>Latest Articles</h3>

  <!-- Language Select Form -->
  <form method="GET" action="/admin/latest_Aaticles_list">
    <div class="mb-3">
      <label>Select Language:</label>
      <select name="language" class="form-control" onchange="this.form.submit()">
        <option value="en" <%= language === 'en' ? 'selected' : '' %>>English</option>
        <option value="mr" <%= language === 'mr' ? 'selected' : '' %>>Marathi</option>
        <option value="hi" <%= language === 'hi' ? 'selected' : '' %>>Hindi</option>
      </select>
    </div>
  </form>

  <!-- Add New Article Button -->
  <a href="/admin/latest_Aaticles" class="btn btn-primary mb-3">Add New Article</a>

  <!-- Articles Table -->
  <table class="table table-bordered mt-3">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Heading</th>
        <th>Description</th>
        <th>Language</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i<LatestArticles.length; i++){ %>
        <tr>
          <td><%= LatestArticles[i].id %></td>
          <td><%= LatestArticles[i].heading %></td>
          <td><%= LatestArticles[i].description %></td>
          <td>
            <% if(LatestArticles[i].language === 'mr') { %> Marathi
            <% } else if(LatestArticles[i].language === 'hi') { %> Hindi
            <% } else { %> English
            <% } %>
          </td>
          <td>
            <% if(LatestArticles[i].image){ %>
              <img src="/uploads/<%= LatestArticles[i].image %>" width="80">
            <% } else { %> N/A <% } %>
          </td>
          <td>
            <a href="/admin/edit_LatestArticle/<%= LatestArticles[i].id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/admin/delete_LatestArticle/<%= LatestArticles[i].id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("footer") %>
