<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Recommendation Type</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        
        <div class="card shadow-lg border-0 rounded-4">
          <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h4 class="mb-0">Add Recommendation Type</h4>
          </div>
          <div class="card-body">
            
            <form action="/admin/add-recommendation-type" method="POST">

              <!-- Language Dropdown (TOP) -->
              <div class="mb-3">
                <label for="language" class="form-label">Language</label>
                <select id="language" name="language" class="form-select" required>
                  <option value="" disabled selected>-- Select Language --</option>
                  <option value="en">English</option>
                  <option value="hi">Hindi</option>
                  <option value="mr">Marathi</option>
                </select>
              </div>

              <!-- Recommendation Type Field -->
              <div class="mb-3">
                <label for="type" class="form-label">Recommendation Type</label>
                <input type="text" id="type" name="type" class="form-control" placeholder="Enter recommendation type" required>
              </div>

              <!-- Submit Button -->
              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-3">
                  Save Recommendation
                </button>
              </div>
            </form>

          </div>
        </div>

      </div>
    </div>
  </div>

   <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        
        <div class="card shadow-lg border-0 rounded-4">
          <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h4 class="mb-0">Recommendation Types List</h4>
          </div>
          <div class="card-body">

            <table class="table table-striped table-bordered">
              <thead class="table-dark">
                <tr>
                  <th>ID</th>
                  <th>Language</th>
                  <th>Type</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (type.length > 0) { %>
                  <% type.forEach(function(row){ %>
                    <tr>
                      <td><%= row.id %></td>
                      <td><%= row.language %></td>
                      <td><%= row.type_name %></td>
                      <td>
                        <a href="/admin/delete_type/<%=row.id%>" 
               class="btn btn-sm btn-danger"
               onclick="return confirm('Are you sure you want to delete this type?')">
             Delete
            </a>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="3" class="text-center">No recommendation types found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>

          </div>
        </div>

      </div>
    </div>
  </div>
</body>
</html>
