<%- include("navbar") %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Product Brand</h4>
                </div>
                <div class="card-body">
                    <form action="/admin/add_brand" method="POST" enctype="multipart/form-data">
                        
                        <!-- Brand Name EN -->
                        <div class="mb-3">
                            <label for="brandNameEn" class="form-label fw-semibold">Brand Name (English)</label>
                            <input type="text" class="form-control" id="brandNameEn" name="brandNameEn" placeholder="Enter brand name in English" required>
                        </div>

                        <!-- Brand Name HI -->
                        <div class="mb-3">
                            <label for="brandNameHi" class="form-label fw-semibold">Brand Name (Hindi)</label>
                            <input type="text" class="form-control" id="brandNameHi" name="brandNameHi" placeholder="ब्रांड का नाम दर्ज करें" required>
                        </div>

                        <!-- Brand Name MR -->
                        <div class="mb-3">
                            <label for="brandNameMr" class="form-label fw-semibold">Brand Name (Marathi)</label>
                            <input type="text" class="form-control" id="brandNameMr" name="brandNameMr" placeholder="ब्रँडचे नाव टाका" required>
                        </div>

                        <!-- Brand Image -->
                        <div class="mb-3">
                            <label for="brandImage" class="form-label fw-semibold">Brand Image</label>
                            <input type="file" class="form-control" id="brandImage" name="brandImage" accept="image/*" required onchange="previewBrandImage(event)">
                        </div>

                        <!-- Image Preview -->
                        <div class="mb-3">
                            <img id="brandPreview" src="https://via.placeholder.com/150" alt="Preview" class="img-thumbnail shadow-sm" style="width:150px; display:none;">
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-save"></i> Save Brand
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Preview Script -->
<script>
function previewBrandImage(event) {
    const preview = document.getElementById('brandPreview');
    preview.src = URL.createObjectURL(event.target.files[0]);
    preview.style.display = 'block';
}
</script>

