<%- include("navbar") %>

<div class="container mt-4">

  <!-- Top Right Language Select -->
  <div style="text-align:right; margin-bottom:20px;">
    <form id="langForm" method="GET" action="/admin/Values">
      <select name="language" onchange="document.getElementById('langForm').submit()">
        <option value="en" <%= lang==='en' ? 'selected' : '' %>>English</option>
        <option value="hi" <%= lang==='hi' ? 'selected' : '' %>>Hindi</option>
        <option value="mr" <%= lang==='mr' ? 'selected' : '' %>>Marathi</option>
      </select>
    </form>
  </div>

  <!-- Vision Cards -->
  <% for(var i=0; i < Values.length; i++) { %>
    <div class="card mb-3 text-center" style="padding:20px;">
      
      <!-- Icon Top Center -->
      <div style="margin-bottom:10px; font-size:40px; color:#007bff;">
        <i class="fas fa-eye"></i>
      </div>

      <!-- Title -->
      <h3><%= Values[i].title %></h3>

      <!-- Description -->
      <p><%= Values[i].description %></p>

      <!-- Update Button -->
      <div style="margin-top:10px;">
        <a href="/admin/Values/edit/<%= Values[i].id %>" class="btn btn-primary">Update</a>
      </div>
    </div>
  <% } %>

</div>

<%- include("footer") %>
