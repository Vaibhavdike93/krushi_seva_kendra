<%- include('navbar') %>

<div class="container mt-4">
  <h2 class="text-center mb-4">Our Story</h2>

  <!-- Language select -->
  <form method="GET" action="/admin/ourstory" class="mb-4">
    <select name="lang" class="form-select w-auto d-inline-block">
      <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
      <option value="mr" <%= lang === 'mr' ? 'selected' : '' %>>Marathi</option>
      <option value="mr" <%= lang === 'hi' ? 'selected' : '' %>>hindi</option>
    </select>
    <button type="submit" class="btn btn-primary btn-sm">Filter</button>
  </form>

  <% ourStoryData.forEach(function(story){ %>
    <div class="story-card" style="border:1px solid #ccc; padding:15px; margin-bottom:15px; border-radius:5px;">
      <h4><%= story.title %></h4>
      
      <p><strong>Paragraph 1:</strong> <%= story.parag_1 %></p>
      <p><strong>Paragraph 2:</strong> <%= story.parag_2 %></p>
      <p><strong>Paragraph 3:</strong> <%= story.parag_3 %></p>

      <% if(story.img){ %>
        <img src="/uploads/<%= story.img %>" alt="story image" style="max-width:100%; height:auto; margin-bottom:10px;">
      <% } %>

      <!-- Update button -->
      <a href="/ourstory/update/<%= story.id %>" class="btn btn-warning btn-sm">Update</a>
    </div>
  <% }); %>
</div>

<%- include('footer') %>
