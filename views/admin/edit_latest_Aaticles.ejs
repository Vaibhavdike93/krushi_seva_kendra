<%- include("navbar") %>
<div class="container mt-4">
  <h3>Edit Farming Tip</h3>
  <form action="/admin/artical/Update/<%= artical[0].id %>" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label>Title</label>
      <input type="text" name="title" value="<%= artical[0].heading %>" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Description</label>
      <textarea name="description" class="form-control" rows="5"><%= artical[0].description %></textarea>
    </div>
    <div class="mb-3">
      <label>Image</label>
      <input type="file" name="image" class="form-control">
      <% if (artical[0].image) { %>
        <img src="/uploads/<%= artical[0].image %>" width="150" class="mt-2">
      <% } %>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/farming" class="btn btn-secondary">Cancel</a>
  </form>
</div>
<%- include("footer") %>

