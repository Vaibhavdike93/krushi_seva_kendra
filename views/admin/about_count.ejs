<%- include("navbar") %>

<div class="container mt-4">

  <!-- Heading -->
  <h2 class="text-center mb-4">Count Section</h2>

  <!-- Language Select Form -->
  <form method="GET" action="/admin/about_count" id="langForm" style="text-align:center; margin-bottom:20px;">
    <select name="lang" id="langSelect" onchange="document.getElementById('langForm').submit()" style="padding:5px 10px;">
      <option value="en" <%= lang === "en" ? "selected" : "" %>>English</option>
      <option value="mr" <%= lang === "mr" ? "selected" : "" %>>Marathi</option>
      <option value="hi" <%= lang === "hi" ? "selected" : "" %>>Hindi</option>
    </select>
  </form>

  <!-- About Count Data -->
  <% if (about_count && about_count.length > 0) { %>
    <div class="row text-center">
      <div class="col-md-4 mb-3">
        <h5><%= about_count[0].title_1 %></h5>
        <h2><%= about_count[0].count_1 %></h2>
      </div>
      <div class="col-md-4 mb-3">
        <h5><%= about_count[0].title_2 %></h5>
        <h2><%= about_count[0].count_2 %></h2>
      </div>
      <div class="col-md-4 mb-3">
        <h5><%= about_count[0].title_3 %></h5>
        <h2><%= about_count[0].count_3 %></h2>
      </div>
    </div>

    <!-- Update Button -->
    <div class="text-center mt-3">
      <a href="/admin/about_count/update/<%= about_count[0].id %>" class="btn btn-primary">
        Update
      </a>
    </div>

  <% } else { %>
    <p class="text-center text-muted">डेटा उपलब्ध नाही.</p>
  <% } %>

</div>

<%- include("footer") %>
