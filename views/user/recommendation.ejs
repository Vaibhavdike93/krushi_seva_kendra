    <script>
       
     
          

        const resultsGrid = document.getElementById('resultsGrid');
        const detailDrawer = document.getElementById('detailDrawer');
        const drawerClose = document.getElementById('drawerClose');
        const backdrop = document.getElementById('backdrop');
        const totalRecsElement = document.getElementById('totalRecs');
        const filterToggle = document.getElementById('filterToggle');
        const filtersSection = document.querySelector('.filters');

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderRecommendationCards();
            setupEventListeners();
            animateCounter(totalRecsElement, recommendations.length);
        });

        // Render recommendation cards
        function renderRecommendationCards() {
            resultsGrid.innerHTML = '';
            
            recommendations.forEach(rec => {
                const card = document.createElement('article');
                card.className = 'rec-card';
                card.setAttribute('data-rec-id', rec.id);
                card.setAttribute('data-confidence', rec.confidence);
                card.setAttribute('data-crop', rec.crop[0]);
                card.setAttribute('data-soil', rec.soil_type[0]);
                
                const confidenceClass = `confidence-${rec.confidence}`;
                
                card.innerHTML = `
                    <div class="card-top">
                        <div class="card-icon">
                            <i class="fas fa-flask"></i>
                        </div>
                        <h3 class="card-title">${rec.title}</h3>
                        <p class="card-summary">${rec.summary}</p>
                        <div class="card-meta">
                            <span class="confidence-badge ${confidenceClass}">${rec.confidence.charAt(0).toUpperCase() + rec.confidence.slice(1)}</span>
                            <time class="card-date" datetime="${rec.updated_at}">${formatDate(rec.updated_at)}</time>
                        </div>
                    </div>
                    <div class="card-actions">
                        <button class="card-action-btn btn-detail">
                            <i class="fas fa-info-circle"></i>
                            Details
                        </button>
                        <button class="card-action-btn btn-save">
                            <i class="fas fa-bookmark"></i>
                            Save
                        </button>
                        <button class="card-action-btn btn-download">
                            <i class="fas fa-download"></i>
                            PDF
                        </button>
                    </div>
                `;
                
                resultsGrid.appendChild(card);
            });
            
            // Setup intersection observer for fade-up animation
            setupIntersectionObserver();
        }

        // Format date as "10 Aug 2023"
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB', {
                day: 'numeric',
                month: 'short',
                year: 'numeric'
            });
        }

        // Setup event listeners
        function setupEventListeners() {
            // Detail button click
            resultsGrid.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn-detail') || e.target.closest('.btn-detail')) {
                    openDetailDrawer();
                }
            });
            
            // Close drawer
            drawerClose.addEventListener('click', closeDetailDrawer);
            backdrop.addEventListener('click', closeDetailDrawer);
            
            // Filter toggle
            filterToggle.addEventListener('click', function() {
                filtersSection.classList.toggle('collapsed');
                const icon = filterToggle.querySelector('i');
                if (filtersSection.classList.contains('collapsed')) {
                    icon.className = 'fas fa-chevron-down';
                } else {
                    icon.className = 'fas fa-chevron-up';
                }
            });
            
            // Card hover effect (micro-tilt)
            setupCardHoverEffects();
        }

        // Setup intersection observer for card animations
        function setupIntersectionObserver() {
            const cards = document.querySelectorAll('.rec-card');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        // Add delay based on index for staggered effect
                        entry.target.style.transitionDelay = `${(index % 6) * 45}ms`;
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.12 });
            
            cards.forEach(card => observer.observe(card));
        }

        // Setup card hover effects (micro-tilt)
        function setupCardHoverEffects() {
            const cards = document.querySelectorAll('.rec-card');
            
            cards.forEach(card => {
                if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
                
                card.addEventListener('mousemove', function(e) {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    
                    const rotateY = (x - centerX) / 25;
                    const rotateX = (centerY - y) / 25;
                    
                    card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-4px)`;
                });
                
                card.addEventListener('mouseleave', function() {
                    card.style.transform = '';
                });
            });
        }

        // Open detail drawer
        function openDetailDrawer() {
            detailDrawer.classList.add('open');
            backdrop.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Close detail drawer
        function closeDetailDrawer() {
            detailDrawer.classList.remove('open');
            backdrop.classList.remove('active');
            document.body.style.overflow = '';
        }

        // Animate counter
        function animateCounter(element, target) {
            let count = 0;
            const duration = 1500;
            const steps = 60;
            const increment = target / (duration / steps);
            
            const timer = setInterval(() => {
                count += increment;
                if (count >= target) {
                    count = target;
                    clearInterval(timer);
                }
                element.textContent = Math.round(count);
            }, steps);
        }
    </script>
