            margin-top: 24px;
        }

        /* Feedback Section */
        .feedback {
            background-color: var(--neutral-light);
            padding: 24px;
            border-radius: var(--border-radius);
            text-align: center;
            margin-bottom: 40px;
            box-shadow: var(--box-shadow);
        }

        .feedback-title {
            margin-bottom: 16px;
        }

        .feedback-actions {
            display: flex;
            justify-content: center;
            gap: 16px;
        }

        .feedback-btn {
            padding: 10px 24px;
            border-radius: var(--border-radius);
            background: none;
            border: 1px solid #ddd;
            font-weight: 600;
            transition: var(--transition);
        }

        .feedback-btn:hover {
            background-color: #f0f0f0;
        }

        .feedback-btn.helpful {
            border-color: var(--green-accent);
            color: var(--green-accent);
        }

        .feedback-btn.not-helpful {
            border-color: #f44336;
            color: #f44336;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-bottom: 40px;
        }

        .pagination-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: none;
            border: 1px solid #ddd;
            font-weight: 600;
            transition: var(--transition);
        }

        .pagination-btn.active {
            background-color: var(--button-color);
            color: white;
            border-color: var(--button-color);
        }

        .pagination-btn:hover:not(.active) {
            background-color: #f0f0f0;
        }

        /* Backdrop */
        .backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
        }

        .backdrop.active {
            opacity: 1;
            visibility: visible;
        }

        /* Skeleton Loading */
        .skeleton {
            background: linear-gradient(90deg, #eee 25%, #f5f5f5 50%, #eee 75%);
            background-size: 200% 100%;
            animation: shimmer 1.2s infinite;
            border-radius: var(--border-radius);
        }

        @keyframes shimmer {
            to {
                background-position: -200% 0;
            }
        }

        .skeleton-card {
            height: 280px;
            margin-bottom: 24px;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .detail-drawer {
                width: 70%;
            }

            .heros-content {
                flex-direction: column;
            }

            .heros-stats {
                width: 100%;
            }
        }

        @media (max-width: 768px) {
            .detail-drawer {
                width: 85%;
            }

            .filter-grid {
                grid-template-columns: 1fr;
            }

            .filter-toggle {
                display: block;
            }

            .filters.collapsed .filter-grid {
                display: none;
            }

            .results-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 576px) {
            .detail-drawer {
                width: 100%;
            }

            .heros-title {
                font-size: 2rem;
            }

            .card-actions {
                flex-direction: column;
                gap: 8px;
            }

            .card-action-btn {
                justify-content: flex-start;
            }

            .feedback-actions {
                flex-direction: column;
            }
        }

        /* Animation for counter */
        @keyframes countUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .counting {
            animation: countUp 0.5s ease forwards;
        }
    </style>

