        // Format date as "10 Aug 2023"
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB', {
                day: 'numeric',
                month: 'short',
                year: 'numeric'
            });
        }

        // Setup event listeners
        function setupEventListeners() {
            // Detail button click
            resultsGrid.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn-detail') || e.target.closest('.btn-detail')) {
                    const card = e.target.closest('.rec-card');
                    const recId = card.getAttribute('data-rec-id');
                    openDetailDrawer(recId);
                }
                
                if (e.target.classList.contains('btn-save') || e.target.closest('.btn-save')) {
                    const card = e.target.closest('.rec-card');
                    const recId = card.getAttribute('data-rec-id');
                    toggleSaveRecommendation(recId, card);
                }
                
                if (e.target.classList.contains('btn-download') || e.target.closest('.btn-download')) {
                    const card = e.target.closest('.rec-card');
                    const recId = card.getAttribute('data-rec-id');
                    downloadPdf(recId);
                }
            });
            
            // Close drawer
            drawerClose.addEventListener('click', closeDetailDrawer);
            backdrop.addEventListener('click', closeDetailDrawer);
            
            // Search functionality
            searchBtn.addEventListener('click', performSearch);
            searchInput.addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });
            
            // Drawer actions
            exportPdfBtn.addEventListener('click', function() {
                const recId = detailDrawer.getAttribute('data-current-rec');
                downloadPdf(recId);
            });
            
            printBtn.addEventListener('click', function() {
                window.print();
            });
            
            requestAgronomistBtn.addEventListener('click', function() {
                showToast('Agronomist request sent successfully!');
            });
            
            requestVisitBtn.addEventListener('click', function() {
                showToast('Field visit requested successfully!');
            });
            
            // Feedback buttons
            document.querySelectorAll('.feedback-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    showToast('Thank you for your feedback!');
                });
            });
            
            // Card hover effect (micro-tilt)
            setupCardHoverEffects();
        }

        // Setup intersection observer for card animations
        function setupIntersectionObserver() {
            const cards = document.querySelectorAll('.rec-card');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        // Add delay based on index for staggered effect
                        entry.target.style.transitionDelay = `${(index % 6) * 45}ms`;
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.12 });
            
            cards.forEach(card => observer.observe(card));
        }

        // Setup card hover effects (micro-tilt)
        function setupCardHoverEffects() {
            const cards = document.querySelectorAll('.rec-card');
            
            cards.forEach(card => {
                if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
                
                card.addEventListener('mousemove', function(e) {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    
                    const rotateY = (x - centerX) / 25;
                    const rotateX = (centerY - y) / 25;
                    
                    card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-4px)`;
                });
                
                card.addEventListener('mouseleave', function() {
                    card.style.transform = '';
                });
            });
        }

        // Open detail drawer with specific recommendation
        function openDetailDrawer(recId) {
            const recommendation = recommendations.find(rec => rec.id === parseInt(recId));
            if (!recommendation) return;
            
            // Set current recommendation ID
            detailDrawer.setAttribute('data-current-rec', recId);
            
            // Populate drawer content
            document.getElementById('detailSummary').textContent = recommendation.summary;
            
            // Populate dosage list
            const dosageList = document.getElementById('detailDosage');
            dosageList.innerHTML = '';
            recommendation.dosage.forEach(item => {
                const li = document.createElement('li');
                li.className = 'dosage-item';
                li.innerHTML = `<span>${item.name}</span><span>${item.amount}</span>`;
                dosageList.appendChild(li);
            });
            
            // Populate schedule
            const scheduleList = document.getElementById('detailSchedule');
            scheduleList.innerHTML = '';
            recommendation.schedule.forEach(item => {
                const li = document.createElement('li');
                li.className = 'checklist-item';
                li.innerHTML = `
                    <div class="checklist-status ${item.completed ? 'completed' : ''}">${item.completed ? '<i class="fas fa-check"></i>' : ''}</div>
                    <div>
                        <p>${item.task}</p>
                        <small>Due: ${item.due}</small>
                    </div>
                `;
                scheduleList.appendChild(li);
            });
            
            // Populate products
            const productsContainer = document.getElementById('detailProducts');
            productsContainer.innerHTML = '';
            recommendation.products.forEach(product => {
                const div = document.createElement('div');
                div.className = 'product-suggestion';
                div.innerHTML = `
                    <div class="product-image">
                        <i class="fas fa-box"></i>
                    </div>
                    <div>
                        <h4>${product.name}</h4>
                        <p>${product.description}</p>
                    </div>
                `;
                productsContainer.appendChild(div);
            });
            
            // Populate warnings
            const warningsContainer = document.getElementById('detailWarnings');
            warningsContainer.innerHTML = '';
            recommendation.warnings.forEach(warning => {
                const div = document.createElement('div');
                div.className = 'warning';
                div.innerHTML = `<p>${warning}</p>`;
                warningsContainer.appendChild(div);
            });
            
            // Open drawer
            detailDrawer.classList.add('open');
            backdrop.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Close detail drawer
        function closeDetailDrawer() {
            detailDrawer.classList.remove('open');
            backdrop.classList.remove('active');
            document.body.style.overflow = '';
        }

        // Toggle save recommendation
        function toggleSaveRecommendation(recId, card) {
            const btn = card.querySelector('.btn-save');
            const isSaved = btn.classList.contains('saved');
            
            if (isSaved) {
                btn.classList.remove('saved');
                btn.innerHTML = '<i class="fas fa-bookmark"></i> Save';
                showToast('Recommendation removed from saved items');
            } else {
                btn.classList.add('saved');
                btn.innerHTML = '<i class="fas fa-bookmark"></i> Saved';
                showToast('Recommendation saved for later');
            }
        }

        // Download PDF
        function downloadPdf(recId) {
            const recommendation = recommendations.find(rec => rec.id === parseInt(recId));
            if (!recommendation) return;
            
            showToast(`Downloading PDF for ${recommendation.title}`);
            
            // In a real application, this would generate or fetch a PDF file
            // For demonstration, we'll create a simpleg1 text-based "PDF"
            const pdfContent = `
                Krushi Seva Kendra - Soil Recommendation
                ========================================
                
                Recommendation: ${recommendation.title}
                Sample ID: ${recommendation.sample_id}
                Date: ${formatDate(recommendation.updated_at)}
                Confidence: ${recommendation.confidence}
                
                Summary:
                ${recommendation.summary}
                
                Dosage per Hectare:
                ${recommendation.dosage.map(item => `- ${item.name}: ${item.amount}`).join('\n')}
                
                Schedule:
                ${recommendation.schedule.map(item => `- ${item.task} (Due: ${item.due})`).join('\n')}
                
                Important Notes:
                ${recommendation.warnings.map(note => `- ${note}`).join('\n')}
                
                Author: ${recommendation.author}
            `;
            
            // Create a blob and download link
            const blob = new Blob([pdfContent], { type: 'application/pdf' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `Recommendation_${recommendation.sample_id}.pdf`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Perform search
        function performSearch() {
            const query = searchInput.value.toLowerCase().trim();
            
            if (query === '') {
                renderRecommendationCards();
                return;
            }
            
            const filteredRecs = recommendations.filter(rec => 
                rec.title.toLowerCase().includes(query) ||
                rec.summary.toLowerCase().includes(query) ||
                rec.crop.some(c => c.toLowerCase().includes(query)) ||
                rec.soil_type.some(s => s.toLowerCase().includes(query))
            );
            
            // Update results count
            animateCounter(totalRecsElement, filteredRecs.length);
            
            // Clear and re-render results
            resultsGrid.innerHTML = '';
            
            if (filteredRecs.length === 0) {
                resultsGrid.innerHTML = `
                    <div class="no-results">
                        <h3>No recommendations found</h3>
                        <p>Try different search terms or request a field visit for personalized recommendations.</p>
                    </div>
                `;
                return;
            }
            
            filteredRecs.forEach(rec => {
                const card = document.createElement('article');
                card.className = 'rec-card';
                card.setAttribute('data-rec-id', rec.id);
                card.setAttribute('data-confidence', rec.confidence);
                card.setAttribute('data-crop', rec.crop[0]);
                card.setAttribute('data-soil', rec.soil_type[0]);
                
                const confidenceClass = `confidence-${rec.confidence}`;
                
                card.innerHTML = `
                    <div class="card-top">
                        <div class="card-icon">
                            <i class="fas fa-flask"></i>
                        </div>
                        <h3 class="card-title">${rec.title}</h3>
                        <p class="card-summary">${rec.summary}</p>
                        <div class="card-meta">
                            <span class="confidence-badge ${confidenceClass}">${rec.confidence.charAt(0).toUpperCase() + rec.confidence.slice(1)}</span>
                            <time class="card-date" datetime="${rec.updated_at}">${formatDate(rec.updated_at)}</time>
                        </div>
                    </div>
                    <div class="card-actions">
                        <button class="card-action-btn btn-detail">
                            <i class="fas fa-info-circle"></i>
                            Details
                        </button>
                        <button class="card-action-btn btn-save">
                            <i class="fas fa-bookmark"></i>
                            Save
                        </button>
                        <button class="card-action-btn btn-download">
                            <i class="fas fa-download"></i>
                            PDF
                        </button>
                    </div>
                `;
                
                resultsGrid.appendChild(card);
            });
            
            // Re-setup intersection observer for new cards
            setupIntersectionObserver();
        }

        // Show toast notification
        function showToast(message) {
            toast.textContent = message;
            toast.classList.add('visible');
            
            setTimeout(() => {
                toast.classList.remove('visible');
            }, 3000);
        }

        // Animate counter
        function animateCounter(element, target) {
            let count = 0;
            const duration = 1500;
            const steps = 60;
            const increment = target / (duration / steps);
            
            const timer = setInterval(() => {
                count += increment;
                if (count >= target) {
                    count = target;
                    clearInterval(timer);
                }
                element.textContent = Math.round(count);
            }, steps);
        }
