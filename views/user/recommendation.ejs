            recommendations.forEach(rec => {
                const card = document.createElement('article');
                card.className = 'rec-card';
                card.setAttribute('data-rec-id', rec.id);
                card.setAttribute('data-confidence', rec.confidence);
                card.setAttribute('data-crop', rec.crop[0]);
                card.setAttribute('data-soil', rec.soil_type[0]);
                
                const confidenceClass = `confidence-${rec.confidence}`;
                
                card.innerHTML = `
                    <div class="card-top">
                        <div class="card-icon">
                            <i class="fas fa-flask"></i>
                        </div>
                        <h3 class="card-title">${rec.title}</h3>
                        <p class="card-summary">${rec.summary}</p>
                        <div class="card-meta">
                            <span class="confidence-badge ${confidenceClass}">${rec.confidence.charAt(0).toUpperCase() + rec.confidence.slice(1)}</span>
                            <time class="card-date" datetime="${rec.updated_at}">${formatDate(rec.updated_at)}</time>
