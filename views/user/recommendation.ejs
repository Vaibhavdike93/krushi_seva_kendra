<%-include("navbar.ejs")%>
    <style>
        /* CSS Variables */
        

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--page-bg);
            color: var(--text-primary);
            line-height: 1.6;
        }

        h1, h2, h3, h4 {
            font-weight: 600;
            color: var(--text-dark);
        }

        button {
            cursor: pointer;
            border: none;
            font-family: inherit;
        }

        /* Utility Classes */
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        /* Heros Section */
        .heros {
            padding: 40px 0;
            background-color: var(--page-bg);
        }

        .heros-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 30px;
        }

        .heros-text {
            flex: 1;
        }

        .heros-title {
            font-size: 2.5rem;
            margin-bottom: 12px;
            color: var(--text-dark);
        }

        .heros-subtitle {
            font-size: 1.1rem;
            color: var(--text-secondary);
            margin-bottom: 24px;
            max-width: 600px;
        }

        .heros-stats {
            display: flex;
            flex-direction: column;
            gap: 12px;
            background-color: var(--neutral-light);
            padding: 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            min-width: 250px;
        }

        .stat-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .stat-label {
            color: var(--text-light);
        }

        .stat-value {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .btn {
            padding: 12px 24px;
            border-radius: var(--border-radius);
            font-weight: 600;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background-color: var(--button-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--button-hover-color);
            transform: translateY(-2px);
        }

        /* Filters Section */
        .filters {
            background-color: var(--neutral-light);
            padding: 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            margin-bottom: 24px;
        }

        .filter-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

        .filter-title {
            font-size: 1.2rem;
        }

        .filter-toggle {
            background: none;
            color: var(--button-color);
            font-weight: 600;
            display: none;
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 16px;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-label {
            font-size: 0.9rem;
            color: var(--text-light);
        }

        .filter-input {
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: var(--border-radius);
            background-color: white;
            font-family: inherit;
        }

        .filter-actions {
            display: flex;
            gap: 12px;
            margin-top: 16px;
        }

        .btn-secondary {
            background-color: var(--neutral-light);
            color: var(--text-dark);
            border: 1px solid #ddd;
        }

        .btn-secondary:hover {
            background-color: #eee;
        }

        /* Summary Chips */
        .summary-chips {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 24px;
            align-items: center;
        }

        .chip {
            background-color: var(--light-green);
            color: var(--text-dark);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .chip-close {
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-light);
            font-size: 1rem;
        }

        .clear-all {
            background: none;
            border: none;
            color: var(--button-color);
            font-weight: 600;
            cursor: pointer;
        }

        /* Results Grid */
        .results-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .rec-card {
            background-color: var(--card-bg);
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--box-shadow);
            transition: var(--transition);
            transform: translateY(12px);
            opacity: 0;
            position: relative;
        }

        .rec-card.is-visible {
            transform: translateY(0);
            opacity: 1;
        }

        .rec-card:hover {
            box-shadow: var(--box-shadow-hover);
            transform: translateY(-4px);
        }

        .card-top {
            padding: 20px;
        }

        .card-icon {
            width: 48px;
            height: 48px;
            background-color: var(--light-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 16px;
            color: var(--green-accent);
            font-size: 1.2rem;
        }

        .card-title {
            font-size: 1.2rem;
            margin-bottom: 8px;
        }

        .card-summary {
            color: var(--text-secondary);
            margin-bottom: 16px;
            font-size: 0.95rem;
        }

        .card-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .confidence-badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .confidence-high {
            background-color: #E8F5E9;
            color: #2E7D32;
        }

        .confidence-medium {
            background-color: #FFF8E1;
            color: #F57C00;
        }

        .confidence-low {
            background-color: #FFEBEE;
            color: #D32F2F;
        }

        .card-date {
            font-size: 0.85rem;
            color: var(--text-light);
        }

        .card-actions {
            display: flex;
            border-top: 1px solid rgba(0, 0, 0, 0.08);
            padding: 12px 20px;
        }

        .card-action-btn {
            flex: 1;
            text-align: center;
            padding: 8px;
            background: none;
            color: var(--text-light);
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            transition: var(--transition);
        }

        .card-action-btn:hover {
            color: var(--button-color);
        }

        /* Detail Drawer */
        .detail-drawer {
            position: fixed;
            top: 0;
            right: -100%;
            width: 50%;
            height: 100vh;
            background-color: white;
            box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
            z-index: 1000;
            transition: right 0.4s ease;
            overflow-y: auto;
            padding: 0;
        }

        .detail-drawer.open {
            right: 0;
        }

        .drawer-header {
            padding: 20px;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            background-color: white;
            z-index: 10;
        }

        .drawer-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--text-light);
            cursor: pointer;
        }

        .drawer-content {
            padding: 20px;
        }

        .drawer-section {
            margin-bottom: 24px;
        }

        .drawer-section-title {
            font-size: 1.1rem;
            margin-bottom: 12px;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .dosage-list {
            list-style-type: none;
        }

        .dosage-item {
            padding: 12px;
            background-color: var(--neutral-light);
            border-radius: var(--border-radius);
            margin-bottom: 8px;
            display: flex;
            justify-content: space-between;
        }

        .schedule-checklist {
            list-style-type: none;
        }

        .checklist-item {
            padding: 12px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .checklist-status {
            width: 20px;
            height: 20px;
            border: 2px solid #ddd;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .checklist-status.completed {
            background-color: var(--green-accent);
            border-color: var(--green-accent);
            color: white;
        }

        .product-suggestion {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background-color: var(--neutral-light);
            border-radius: var(--border-radius);
            margin-bottom: 8px;
        }

        .product-image {
            width: 60px;
            height: 60px;
            background-color: #f5f5f5;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-light);
        }

        .warning {
            padding: 12px;
            background-color: #FFF8E1;
            border-left: 4px solid var(--accent-orange);
            border-radius: 4px;
            margin-bottom: 16px;
        }

        .drawer-actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;
        }

        /* Feedback Section */
        .feedback {
            background-color: var(--neutral-light);
            padding: 24px;
            border-radius: var(--border-radius);
            text-align: center;
            margin-bottom: 40px;
            box-shadow: var(--box-shadow);
        }

        .feedback-title {
            margin-bottom: 16px;
        }

        .feedback-actions {
            display: flex;
            justify-content: center;
            gap: 16px;
        }

        .feedback-btn {
            padding: 10px 24px;
            border-radius: var(--border-radius);
            background: none;
            border: 1px solid #ddd;
            font-weight: 600;
            transition: var(--transition);
        }

        .feedback-btn:hover {
            background-color: #f0f0f0;
        }

        .feedback-btn.helpful {
            border-color: var(--green-accent);
            color: var(--green-accent);
        }

        .feedback-btn.not-helpful {
            border-color: #f44336;
            color: #f44336;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-bottom: 40px;
        }

        .pagination-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: none;
            border: 1px solid #ddd;
            font-weight: 600;
            transition: var(--transition);
        }

        .pagination-btn.active {
            background-color: var(--button-color);
            color: white;
            border-color: var(--button-color);
        }

        .pagination-btn:hover:not(.active) {
            background-color: #f0f0f0;
        }

        /* Backdrop */
        .backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
        }

        .backdrop.active {
            opacity: 1;
            visibility: visible;
        }

        /* Skeleton Loading */
        .skeleton {
            background: linear-gradient(90deg, #eee 25%, #f5f5f5 50%, #eee 75%);
            background-size: 200% 100%;
            animation: shimmer 1.2s infinite;
            border-radius: var(--border-radius);
        }

        @keyframes shimmer {
            to {
                background-position: -200% 0;
            }
        }

        .skeleton-card {
            height: 280px;
            margin-bottom: 24px;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .detail-drawer {
                width: 70%;
            }

            .heros-content {
                flex-direction: column;
            }

            .heros-stats {
                width: 100%;
            }
        }

        @media (max-width: 768px) {
            .detail-drawer {
                width: 85%;
            }

            .filter-grid {
                grid-template-columns: 1fr;
            }

            .filter-toggle {
                display: block;
            }

            .filters.collapsed .filter-grid {
                display: none;
            }

            .results-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 576px) {
            .detail-drawer {
                width: 100%;
            }

            .heros-title {
                font-size: 2rem;
            }

            .card-actions {
                flex-direction: column;
                gap: 8px;
            }

            .card-action-btn {
                justify-content: flex-start;
            }

            .feedback-actions {
                flex-direction: column;
            }
        }

        /* Animation for counter */
        @keyframes countUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .counting {
            animation: countUp 0.5s ease forwards;
        }
    </style>
</head>
