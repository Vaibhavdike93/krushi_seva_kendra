<style>
  /* body { background-color: #f8f9fa; } */
  .cart-header {
    background: #d6f0d6;
    padding: 10px;
    font-size: 18px;
    font-weight: 600;
  }
  .cart-item {
    border-bottom: 1px solid #e0e0e0;
    padding: 15px 0;
  }
  .cart-item img {
    height: 100px;
    width: 120px;
    object-fit: contain;
    border: 1px solid #ddd;
    background: #fff;
  }
  .price {
