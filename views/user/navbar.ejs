    <a href="/recommendation?lang=<%= lang %>"><%= translations.pages_name.Recomendation %></a>
    <a href="/schemes?lang=<%= lang %>"><%= translations.pages_name.Goverment_Schemes %></a>
    </div>
        

      
    </div>
