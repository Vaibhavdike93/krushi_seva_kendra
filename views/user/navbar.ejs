            font-size: 0.875rem;
        }

        .topbar-link:hover {
            color: #fff;
            text-decoration: underline;
        }

        .logo_img {
            height: 60px;
            width: auto;
        }

        /* Search Bar Base */
        .search-form {
            max-width: 600px;
            width: 100%;
        }

        .search-container {
            display: flex;
            border: 1px solid #f38020;
            border-radius: 24px;
            overflow: hidden;
        }

        .search-input {
            flex: 1;
            padding: 10px 16px;
            border: none;
            outline: none;
            font-size: 15px;
        }

        .search-button {
            border: none;
            padding: 0 14px;
            color: white;
            background-color: #f38020;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: #e06e12;
        }

        /* Category Menu */
        .category-menu {
            background: white;
            border-top: 1px solid #ddd;
        }

        .category-menu a {
            display: inline-block;
            padding: 0.5rem 1rem;
            text-decoration: none;
            color: inherit;
        }
        .navbar{
            z-index: 99999;
        }

        .category-menu a:hover {
            color: #f38020;
        }
    

        /* Sticky Category Menu on Desktop */
        @media (min-width: 992px) {
            .category-menu.sticky-desktop {
                position: sticky;
                top: 0;
                z-index: 1020;
                border-bottom: 1px solid #ddd;
                white-space: nowrap;
            }
        }

        /* Mobile View Adjustments */
        @media (max-width: 768px) {
            .logo_img {
                height: 60px;
            }

            /* Navbar collapse layout fix */
            .navbar-collapse {
                width: 100%;
                flex-direction: column;
                align-items: stretch;
            }

            .search-input {
                font-size: 14px;
                padding: 8px 12px;
            }

            .search-button {
                padding: 0 12px;
            }

            .search-form {
                width: 100% !important;
                margin: 0.5rem 0;
            }

            /* Marquee Base (works on desktop and mobile) */
            .marquee-container {
                flex: 1;
                overflow: hidden;
                white-space: nowrap;
                margin: 0 20px;
            }

            .marquee-text {
                display: inline-block;
                animation: scroll 15s linear infinite;
                font-size: 0.875rem;
                color: #d1d5db;
            }

            @keyframes scroll {
                0% {
                    transform: translateX(100%);
                }

                100% {
                    transform: translateX(-100%);
                }
            }

            /* Hide marquee on mobile if you want */
            @media (max-width: 768px) {
                .marquee-container {
                    display: none;
                }
            }


            /* Category menu wrap in mobile */
            .category-menu {
                display: flex;
                flex-wrap: wrap;
                white-space: normal;
                justify-content: center;
                gap: 4px;
                padding: 0.5rem;
            }

            .category-menu a {
                padding: 6px 10px;
                border-radius: 4px;
                background: #f8f8f8;
                font-size: 13px;
            }
        }
    </style>
