<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Krushi Seva Kendra</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3841ba2abd.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f0e5d8;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .register-card {
            max-width: 480px;
            width: 100%;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.08);
            padding: 2rem;
        }

        .btn-orange {
            background-color: #f38020;
            border: none;
            color: white;
            font-weight: 500;
        }

        .btn-orange:hover {
            background-color: #e06e12;
        }

        .form-control:focus {
            border-color: #f38020;
            box-shadow: 0 0 0 0.25rem rgba(243, 128, 32, 0.25);
        }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #888;
        }

        .step {
            display: none;
            animation: fadeIn 0.3s ease-in-out;
        }

        .step.active {
            display: block;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
</head>

<body>

    <div class="register-card">
        <div class="text-center mb-3">
            <img src="logo.png" alt="Krushi Seva Kendra" style="height:80px;">
            <h4 class="mt-2">
                <%= translations.account.your_account %>
            </h4>
            <p class="text-muted small">
                <%= translations.account.join_us %>
            </p>
        </div>

        <form id="registerForm" action="/registration" method="POST">
            <!-- Step 1 -->
            <div class="step active" id="step1">
                <div class="mb-3">
                    <label for="fullname" class="form-label">
                        <%= translations.account.name %>
                    </label>
                    <input type="text" id="fullname" name="name" class="form-control" placeholder="Enter your name"
                        required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">
                        <%= translations.account.email %>
                    </label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email"
                        required>
                </div>
                <div class="mb-3">
                    <label for="mobile" class="form-label">
                        <%= translations.account.mobile %>
                    </label>
                    <input type="tel" id="mobile" class="form-control" name="mobile"
                        placeholder="10-digit mobile number" required pattern="[0-9]{10}">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">
                        <%= translations.account.password %>
                    </label>
                    <div class="password-wrapper">
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Create a password" required>
                        <i class="fa-solid fa-eye toggle-password" id="togglePassword"></i>
                    </div>
                </div>
                <button type="button" class="btn btn-orange w-100" id="nextBtn">
                    <%= translations.buttons.next %>
                </button>
            </div>

            <!-- Step 2 -->
            <div class="step" id="step2">
                <div class="mb-3">
                    <label class="form-label">
                        <%= translations.account.crops %>
                    </label><br>

                    <% crops.forEach(crop=> { %>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="crops[]" value="<%= crop.crop_id %>"
                                id="crop<%= crop.crop_id %>">
                            <label class="form-check-label" for="crop<%= crop.crop_id %>">
                                <%= locals.lang==='en' ? crop.crop_name_en : (locals.lang==='hi' ? crop.crop_name_hi :
                                    crop.crop_name_mr) %>
                            </label>
                        </div>
                        <% }) %>


                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">
                        <%= translations.account.address %>
                    </label>
                    <textarea id="address" class="form-control" rows="3" name="address" placeholder="Enter your address"
                        required></textarea>
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-secondary w-50" id="prevBtn">
                        <%= translations.buttons.previous %>
                    </button>
                    <button type="submit" class="btn btn-orange w-50">
                        <%= translations.buttons.register %>
                    </button>
                </div>
            </div>
        </form>

        <div class="text-center mt-3">
            <span class="small">
                <%= translations.account.already_account %><a href="/login?lang=<%= lang %>" class="text-decoration-none fw-bold"
                        style="color:#f38020;">
                        <%= translations.account.sign_in %>
                    </a>
            </span>
        </div>
    </div>

    <script>
        const step1 = document.getElementById('step1');
        const step2 = document.getElementById('step2');
        const nextBtn = document.getElementById('nextBtn');
        const prevBtn = document.getElementById('prevBtn');

        nextBtn.addEventListener('click', () => {
            if (document.getElementById('fullname').checkValidity() &&
                document.getElementById('email').checkValidity() &&
                document.getElementById('mobile').checkValidity() &&
                document.getElementById('password').checkValidity()) {
                step1.classList.remove('active');
                step2.classList.add('active');
            } else {
                document.getElementById('registerForm').reportValidity();
            }
        });

        prevBtn.addEventListener('click', () => {
            step2.classList.remove('active');
            step1.classList.add('active');
        });

        function togglePasswordView(toggleId, inputId) {
            const toggleIcon = document.getElementById(toggleId);
            const inputField = document.getElementById(inputId);

            toggleIcon.addEventListener('click', () => {
                const type = inputField.type === 'password' ? 'text' : 'password';
                inputField.type = type;
                toggleIcon.classList.toggle('fa-eye');
                toggleIcon.classList.toggle('fa-eye-slash');
            });
        }

        togglePasswordView('togglePassword', 'password');
    </script>

</body>

</html>