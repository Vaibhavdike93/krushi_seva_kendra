<style>
    .footer_background{
        background-color: #8B5E3C;
    }
</style>


<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- AOS JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>
<script>
  AOS.init({
    duration: 800,
    once: true
  });
</script>



<!-- Footer -->
<footer class="footer_background text-white pt-3">
    <div class="container">
        <div class="row gy-4">
            <!-- Logo & About -->
            <div class="col-md-4">
                <img src="logo.png" alt="Krushi Seva Kendra"  style="height:100px;">
                <p class="small text-white">
                   <%= translations.footer.about_company %>
                </p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-2">
                <h6 class="fw-bold"><%= translations.footer.quick_links %></h6>
                <ul class="list-unstyled small">
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.home %></a></li>
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.about %></a></li>
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.products %></a></li>
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.contact %></a></li>
                </ul>
            </div>

            <!-- Customer Support -->
            <div class="col-md-3">
                <h6 class="fw-bold">Customer Support</h6>
                <ul class="list-unstyled small">
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.Faq %></a></li>
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.Shipping_Delivery %></a></li>
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.Return_Policy %></a></li>
                    <li><a href="#" class="text-white text-decoration-none"><%= translations.footer.Terms_condtion %></a></li>
                </ul>
            </div>

            <!-- Social Media -->
            <div class="col-md-3">
                <h6 class="fw-bold"><%= translations.buttons.Follow_us %></h6>
                <div class="d-flex gap-3">
                    <a href="#" class="text-white fs-5"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#" class="text-white fs-5"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" class="text-white fs-5"><i class="fa-brands fa-youtube"></i></a>
                    <a href="#" class="text-white fs-5"><i class="fa-brands fa-whatsapp"></i></a>
                </div>
                <p class="small mt-3 mb-0 text-white"><%= translations.buttons.Call_us %>: <strong>1800-0000-0000</strong></p>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="bg-dark text-center py-2 mt-1">
        <small class="mb-0">&copy; 2025 <%= translations.footer.copyright %></small>
    </div>
</footer>




<script src="/user/script.js"><script/>
