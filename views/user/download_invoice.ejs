<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f9f9f9; }
    .invoice-box {
      background: #fff;
      padding: 30px;
      border: 1px solid #ddd;
      max-width: 800px;
      margin: 20px auto;
      box-shadow: 0 0 10px rgba(0,0,0,.1);
    }
    .invoice-header {
      border-bottom: 2px solid #007bff;
      margin-bottom: 20px;
      padding-bottom: 10px;
    }
    .invoice-footer {
      border-top: 2px solid #007bff;
      margin-top: 20px;
      padding-top: 10px;
      text-align: center;
      font-size: 14px;
      color: #666;
    }
    .company-logo {
      max-width: 150px;
      height: auto;
    }
  </style>
</head>
<body>
  <div class="invoice-box">
    <!-- Header -->
    <div class="invoice-header d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <img src="/krushi.png" alt="Company Logo"  class="company-logo me-3">
        <div>
          <h2 class="text-primary mb-0"><%=company.shop_name%></h2>
          <p class="mb-0"><%=company.shop_address_line1%> <br><%=company.shop_address_line2%> <br> <%=company.city%> <br><%=company.phone_main%> </p>
        </div>
      </div>
      <div class="text-end">
        <h4 class="mb-1">INVOICE</h4>
        <!-- <p class="mb-0">Invoice #: <strong>INV-1001</strong></p> -->
        <p class="mb-0">Date: <strong>26 Aug 2025</strong></p>
      </div>
    </div>

    <!-- Customer Info -->
    <div class="row mb-4">
      <div class="col-sm-6">
        <h6>Billed To:</h6>
        <p class="mb-0"><strong><%=order.name%></strong></p>
        <p class="mb-0"><%=order.village%> <br> <%=order.taluka%> <br> <%=order.district%> </p>
        <p class="mb-0">Phone: +91 <%=order.phone%></p>
      </div>
      <div class="col-sm-6 text-end">
        <h6>Payment Method:<%=order.payment_method%></h6>
        <!-- <p class="mb-0"><%=order.payment_method%></p> -->
        <p class="mb-0">Transaction ID: <%=order.payment_id%></p>
      </div>
    </div>

    <!-- Products Table -->
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Product</th>
          <th>Weight</th>
          <th>Orignal Price</th>
          <th>Discount Price</th>
          <th>Saved Price</th>
          <th>Qty</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>

        <% products.forEach(function(product,index){ %>
          
            <tr>
              <td><%=index+1%></td>
              <td><%=product.product_name%></td>
              <td><%=product.weight%></td>
              <td>â‚¹<%=product.originalPrice%></td>
              <td>â‚¹<%=product.price%></td>
              <td><%=product.saved%></td>
              <td><%=product.quantity%></td>
              <td>â‚¹<%=product.total%></td>
            </tr>

      <%  }) %>
       
      </tbody>
    </table>

    <!-- Summary -->
    <div class="row justify-content-end">
      <div class="col-sm-6">
        <table class="table">
          
          <tr>
            <th>Grand Total:</th>
            <td><strong>â‚¹<%=products[0].total%></strong></td>
          </tr>
        </table>
      </div>
    </div>

    <!-- Footer -->
    <div class="invoice-footer">
      Thank you for shopping with <strong>Krushi Seva Kendra</strong> ðŸŒ±<br>
      This is a computer generated invoice and does not require a signature.
    </div>
  </div>
</body>
</html>
