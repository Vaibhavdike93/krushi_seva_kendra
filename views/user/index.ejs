<%- include("navbar.ejs") %>

    <style>
        :root {
            --navbar-bg: #FAFAF5;
            /* Navbar Background color */
            --page-bg: #FAF8F0;
            /* All Pages Background color */
            --button-color: #F4A300;
            /* All Button background color */
            --button-hover-color: #8B5E3C;
            /* All Button Hover background color */
            --footer-bg: #854717;
            /* Footer Section Background color */
        }


        /* category carousal  */
        .category_title {
            color: #291507c8;

        }

        .carousel-bg {
            background: var(--page-bg);
            padding: 30px;
        }

        .category-item {
            text-align: center;
            padding: 15px;
            flex: 0 0 auto;
            width: 200px;

        }

        .category-item img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
            background: #f5f5f5;
            padding: 10px;
            transition: transform 0.3s ease;
            display: block;
        }

        .category-item:hover img {
            transform: scale(1.08) translateY(-5px);
        }

        .category-title {
            font-size: 18px;
            font-weight: 500;
        }

        .carousel-track {
            display: flex;
            gap: 20px;
            overflow-x: auto;
            scroll-behavior: smooth;
        }

        .carousel-track::-webkit-scrollbar {
            display: none;
        }

        /*  offer product cards */
        .offer_header {
            text-align: center;
            margin-bottom: 20px;
        }

        .offer_header h1::after {
            content: "";
            display: block;
            width: 50px;
            height: 4px;
            background-color: #c7956f;
            margin: 8px auto 0;
            border-radius: 2px;
        }

        /* Tablet */
        @media (max-width: 768px) {
            .offer-card {
                flex: 0 0 200px;
            }
        }

        /* Mobile - Show 1 card */
        @media (max-width: 480px) {
            .offer-track {
                flex-wrap: nowrap;
            }

            .offer-card {
                flex: 0 0 100%;
                margin: 0 5px;
            }
        }

        .offer-carousel {
            position: relative;
        }

        .offer-track-wrapper {
            overflow-x: auto;
            overflow-y: hidden;
            scroll-behavior: smooth;
            padding: 4px 0;
            -ms-overflow-style: none;
            /* IE/Edge */
            scrollbar-width: none;
            /* Firefox */
            cursor: grab;
        }

        .offer-track-wrapper::-webkit-scrollbar {
            display: none;
        }

        /* Chrome */

        .offer-track {
            display: flex;
            gap: 16px;
        }

      

        .slider_btn_orange {
            height: 50px;
            width: 50px;
            border: none;
            padding: 0 14px;
            color: white;
            background-color: #f38020;
            cursor: pointer;
            transition: all 0.3s ease;
            border-radius: 10px;
        }

        .slider_btn_orange:hover {
            background-color: #e06e12;
        }

        .banner {
            background: url("https://media.bighaat.com/wsfbanners/a7e2ca07-7cf9-4fd3-bc16-74926a8b7d98.webp?w=1920&q=80") no-repeat center center/cover;
            height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

    </style>


